// Εμφάνισε τη θερμοκρασία του ασθενή.
radio.onReceivedNumber(function (receivedNumber) {
    basic.showNumber(receivedNumber)
    temp = receivedNumber
})
// Ο/Η νοσοκόμος μπορεί να δει ξανά τα στοιχεία του ασθενή πατώντας το κουμπί Α
input.onButtonPressed(Button.A, function () {
    basic.showString(patient)
    basic.showNumber(temp)
})
// Μόλις λάβεις το σήμα, ενεργοποίησε ηχητικό συναγερμό και εμφάνισε τον συγκεκριμένο ασθενή.
radio.onReceivedString(function (receivedString) {
    for (let index = 0; index < 4; index++) {
        music.playTone(262, music.beat(BeatFraction.Double))
    }
    basic.showString(receivedString)
    patient = receivedString
})
let patient = ""
let temp = 0
led.enable(true)
radio.setGroup(1)
